extends layout 

block content 
    h1= title 

    if category_items.length
        p #[strong Delete the following items before deleting the category]

        div(style='margin-left:20px;margin-top:20px')
            h4 Items
            
            dl
            each item in category_items
                dt 
                    a(href=item.url) #{item.name}
                dd #{item.description}

    else 
        p Do you really want to delete this department?
        form(method='POST', action='')
            div.form-group
                input#categoryid.form-control(type='hidden', name='categoryid', required='true', value=category._id)
            button.btn.btn-danger(type='submit') Delete